@page
@using Microsoft.Extensions.Localization
@using eCompany
@inject IStringLocalizer<SharedResource> sharedResource
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

        <div id="logreg-forms">
            <form id="account" method="post" class="form-signin">
                <h2>@sharedResource["SignIn"]</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-outline mb-2">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Email..."/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-outline">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Password..." autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit"  class="w-100 btn btn-lg btn-primary">@sharedResource["Login"]</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">@sharedResource["ForgotPass"]</a>
                    </p>
                </div>
            </form>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
