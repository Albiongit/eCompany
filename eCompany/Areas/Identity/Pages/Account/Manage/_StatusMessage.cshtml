@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : (Model.StartsWith("Nothing") ? "warning" : "success");
    <div class="alert alert-@statusMessageClass alert-dismissible" role="alert" id="btnClose" style="display:block">
        <button onclick="myFunction()" type="button" class="close" data-bs-dismiss="alert" aria-label="Close alert" ><span aria-hidden="true">&times;</span></button>
        @Model
    </div>


}


@section Scripts {
    <script>
    
        function myFunction() {
            $(document).getElementById("btnClose").hide();
        }
    
    </script>
}