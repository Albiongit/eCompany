@page
@using Microsoft.Extensions.Localization
@using eCompany
@inject IStringLocalizer<SharedResource> sharedResource
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    
}

<h2>@sharedResource["MyAccount"]</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden/>
            <div class="row p-3 border">
                <partial name="_StatusMessage" for="StatusMessage" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>@sharedResource["Profile"]</h3>
                <div class="col-8 pt-4">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" />
                        <label asp-for="Name" class="form-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <select asp-for="Sex" class="form-select">
                            @if(Model.Sex == 'M')
                            {
                                <option value="M">M</option>
                                <option value="F">F</option>
                            }
                            else
                            {
                                <option value="F">F</option>
                                <option value="M">M</option>
                            }
                        </select>
                        <label asp-for="Sex" class="form-label"></label>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="Username" class="form-control" readonly />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="State" class="form-control" />
                        <label asp-for="State" class="form-label"></label>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="City" class="form-control" />
                        <label asp-for="City" class="form-label"></label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input type="file" id="uploadBox" name="file" multiple class="form-control" />
                        <label asp-for="ImageUrl"></label>
                    </div>
                    <br />
                    @if(Model.CompanyName != null)
                    {
                        <div class="form-floating">
                        <input asp-for="CompanyName" class="form-control" readonly/>
                        <label asp-for="CompanyName" class="form-label"></label>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <br />
                    }
                    <div class="form-floating">
                        <input asp-for="Role" class="form-control" readonly/>
                        <label asp-for="Role" class="form-label"></label>
                    </div>
                    
                    <br />
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </div>
                <div class="col-3 offset-1 pt-4">
                    <img src="@Model.ImageUrl" width="100%" style="border-radius:5px;"  />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
