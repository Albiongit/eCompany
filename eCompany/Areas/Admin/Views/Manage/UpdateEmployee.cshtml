@using eCompany.Models.DTOs.Entities
@model ApplicationUserDTO


<h2>Manage Account</h2>
<hr />
<div class="row justify-content-evenly">
    <div class="col-md-8">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <input asp-for="@Model.Id" hidden/>
            <div class="row p-3 border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Profile</h3>
                <div class="col-8 pt-4">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" />
                        <label asp-for="Name" class="form-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <select asp-for="Sex" class="form-select" required>
                            @if(Model.Sex == 'M')
                            {
                                <option value="M">M</option>
                                <option value="F">F</option>
                            }
                            else
                            {
                                <option value="F">F</option>
                                <option value="M">M</option>
                            }
                        </select>
                        <label asp-for="Sex" class="form-label"></label>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" disabled/>
                        <label asp-for="Email" class="form-label"></label>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" class="form-control" required/>
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="State" class="form-control" required/>
                        <label asp-for="State" class="form-label"></label>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="City" class="form-control" required/>
                        <label asp-for="City" class="form-label"></label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input type="file" id="uploadBox" name="file" multiple class="form-control" />
                        <label asp-for="ImageUrl"></label>
                    </div>
                    <br />
                    @if(Model.CompanyName != null)
                    {
                        <div class="form-floating">
                        <input asp-for="CompanyName" class="form-control" disabled/>
                        <label asp-for="CompanyName" class="form-label"></label>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <br />
                    }
                    <div class="form-floating">
                        <select asp-for="Role" asp-items="@Model.RoleList" class="form-select" required>
                            <option>--Select new Role--</option>
                        </select>
                        <label asp-for="Role" class="form-label"></label>
                    </div>
                    
                    <br />
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </div>
                <div class="col-3 offset-1 pt-4">
                    <img src="@Model.ImageUrl" width="100%" style="border-radius:5px;"  />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3 pl-sm-5">
         <div class="row p-2 border">
             <a asp-area="Admin" asp-controller="Manage" asp-action="GetEmployees" asp-route-id="@Model.CompanyId" type="button" class="btn btn-primary btn-lg btn-block">Back to list</a>
    
         </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

   
}
